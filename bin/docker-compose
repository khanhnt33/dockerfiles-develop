#!/bin/bash -e

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
VERSION="1.20.1"
ARCH="$(uname -s)-$(uname -m)"
URL="https://github.com/docker/compose/releases/download/$VERSION/docker-compose-$ARCH"
NAME="docker-compose-$VERSION"

if [ ! -f "$DIR/$NAME" ]; then
    curl -L "$URL" -o "$DIR/$NAME"
    chmod +x "$DIR/$NAME"
fi

exec "$DIR/$NAME" "$@"
